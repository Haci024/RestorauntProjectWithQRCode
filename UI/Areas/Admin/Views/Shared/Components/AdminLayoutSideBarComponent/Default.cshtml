@model ItemCountsDTO
<div class="sidebar">
	<div class="scrollbar-inner sidebar-wrapper">
		<div class="user">
			<div class="photo">
				<img src="~/Ready-Bootstrap-Dashboard-master/assets/img/profile2.jpg">
			</div>
			<div class="info">
				<a class="" data-toggle="collapse" href="#collapseExample" aria-expanded="true">
					<span>
				

					
						<span class="user-level">Administrator</span>
						<span class="caret"></span>
					</span>
				</a>
				<div class="clearfix"></div>

				<div class="collapse in" id="collapseExample" aria-expanded="true" style="">
					<ul class="nav">
						<li>
							<a  asp-controller="Account" asp-action="MyProfile">
								<span class="link-collapse">Profilim</span>
							</a>
						</li>
						<li>
							<a asp-controller="Account" asp-action="UpdateProfile" >
								<span class="link-collapse">Məlumatları yenilə</span>
							</a>
						</li>
						<li>
							<a asp-controller="Account" asp-action="Logout">
								<span class="link-collapse">Hesabdan çıxış</span>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<ul class="nav">
			<li class="nav-item active">
				<a asp-controller="Dashboard" asp-action="Index">
					<i class="la la-dashboard"></i>
					<p>Əsas Səhifə</p>
					<span class="badge badge-count"></span>
				</a>
			</li>
			<li class="nav-item">
				<a asp-controller="Category" asp-action="CategoryList">
					<i class="la la-table"></i>
					<p>Kateqoriyalar</p>
					<span class="badge badge-count">@Model.CategoryCount</span>
				</a>
			</li>
			<li class="nav-item">
				<a asp-controller="Product" asp-action="ProductList">
					<i class="la la-keyboard-o"></i>
					<p>Yeməklər</p>
					<span class="badge badge-count">@Model.ProductCount</span>
				</a>
			</li>
			<li class="nav-item">
				<a asp-controller="ContactUs" asp-action="UnReadMessageList">
					<i class="la la-th"></i>
					<p>Gələn mesajlar</p>
					<span class="badge badge-count">@Model.UnreadMessageCount</span>
				</a>
			</li>
			<li class="nav-item">
				<a asp-controller="Reservation" asp-action="ReservationList">
					<i class="la la-bell"></i>
					<p>Rezervasiyalar</p>
					<span class="badge badge-success">@Model.ReservationCount</span>
				</a>
			</li>
			<li class="nav-item">
				<a href="typography.html">
					<i class="la la-font"></i>
					<p>Haqqımızda</p>
					<span class="badge badge-danger">25</span>
				</a>
			</li>
			<li class="nav-item">
				<a href="icons.html">
					<i class="la la-fonticons"></i>
					<p>Təkliflər</p>
				</a>
			</li>
		
		</ul>
	</div>
</div>